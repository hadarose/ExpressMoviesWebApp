<!DOCTYPE html>
<html>
  <body>
    <h1><%= title %></h1>

    <form action="search/find-data" method="POST">
      Movie Name: <input type="text" name="moviename" /><br /><br />
      Language:
      <select name="language">
        <option disabled selected value>-- Select a Language --</option>
        <option name="English">English</option>
        <option name="Hebrew">Hebrew</option>
        <option name="Japanese">Japanese</option>
      </select>
      <br /><br />

      Genre:
      <select name="genre">
        <option disabled selected value>-- Select a Genre --</option>
        <option name="Action">Action</option>
        <option name="Comedy">Comedy</option>
        <option name="Drama">Drama</option>
        <option name="Kids">Kids</option>
      </select>

      <br /><br />
      <input type="submit" value="Search" />
    </form>
    <br />
    <a href="/menu">Back To Menu</a>
  </body>
</html>
